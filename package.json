{
  "name": "todolist-api",
  "version": "1.0.0",
  "description": "A comprehensive RESTful API for managing to-do lists and tasks with TypeScript, Express, and layered architecture",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "start": "node dist/index.js",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix"
  },
  "keywords": [
    "api",
    "todolist",
    "tasks",
    "typescript",
    "express",
    "rest",
    "nodejs"
